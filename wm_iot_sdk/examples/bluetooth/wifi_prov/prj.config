
#
# CLI
CONFIG_COMPONENT_CLI_ENABLED=y
# end of CLI

CONFIG_COMPONENT_BT_ENABLED=y
CONFIG_BT_PERIPHERAL=y
CONFIG_BT_DEVICE_NAME="WM Iot Dev"

CONFIG_BT_GATT_ENFORCE_SUBSCRIPTION=n

# HCI ACL buffers size
# BT_L2CAP_RX_MTU = CONFIG_BT_BUF_ACL_RX_SIZE - BT_L2CAP_HDR_SIZE
CONFIG_BT_BUF_ACL_RX_SIZE=251

# L2CAP SDU/PDU TX MTU
CONFIG_BT_L2CAP_TX_MTU=247

CONFIG_BT_BUF_ACL_RX_COUNT=12
CONFIG_COMPONENT_DRIVER_RNG_ENABLED=y
CONFIG_COMPONENT_DRIVER_CRYPTO_ENABLED=y
