
#
# CLI
CONFIG_COMPONENT_CLI_ENABLED=y
# end of CLI

# Increased stack due to settings API usage

CONFIG_COMPONENT_BT_ENABLED=y

CONFIG_BT_PERIPHERAL=y
CONFIG_BT_DEVICE_NAME="WM SC Peripheral"
CONFIG_BT_DEVICE_NAME_DYNAMIC=y

CONFIG_BT_GATT_CLIENT=y

# HCI ACL buffers size
# BT_L2CAP_RX_MTU = CONFIG_BT_BUF_ACL_RX_SIZE - BT_L2CAP_HDR_SIZE
CONFIG_BT_BUF_ACL_RX_SIZE=251

# L2CAP SDU/PDU TX MTU
CONFIG_BT_L2CAP_TX_MTU=247
CONFIG_BT_OBSERVER=y
CONFIG_BT_CTLR_SCAN_REQ_REPORT=y

CONFIG_BT_SMP=y
#CONFIG_BT_PRIVACY=y
CONFIG_BT_SIGNING=y
CONFIG_BT_SMP_APP_PAIRING_ACCEPT=y
CONFIG_BT_KEYS_OVERWRITE_OLDEST=y
CONFIG_BT_SETTINGS=y
CONFIG_NVS_KV=y
CONFIG_SETTINGS=y
