menuconfig COMPONENT_MQTT_ENABLED
    depends on CHIP_HAVE_WIFI
    bool "MQTT Client"
    default n
    select COMPONENT_POSIX_ENABLED
    select COMPONENT_MBEDTLS_ENABLED
    help
	  This option enables mqtt client support.

